{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/css/index.css">
{% endblock styles %}

{% block content %}
    <section class="index__allRecipes">
        <div class="index__allRecipes___title">
            <H2>Suas Receitas</H2>

            <a href="/admin/recipe/create "class="recipe__addButton">Adicionar Receita</a>
         </div>

        <div class="index__cards">

            {% for recipe in recipes %}
                <a href="/admin/recipe/{{ recipe.id }}">
                    <div class="index__card">
                        <div class="index__card___image">
                            <img src="{{ recipe.image }}" alt="burguer">
                        </div>
                        <div class="index__card___title">
                            <h3>{{ recipe.title }}</h3>
                        </div>
                        <div class="index__card___author">
                            <p>{{ recipe.author }}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}

            {% for recipe in recipes %}
                <a href="/admin/recipe/{{ recipe.id }}">
                    <div class="index__card">
                        <div class="index__card___image">
                            <img src="{{ recipe.image }}" alt="burguer">
                        </div>
                        <div class="index__card___title">
                            <h3>{{ recipe.title }}</h3>
                        </div>
                        <div class="index__card___author">
                            <p>{{ recipe.author }}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}

            
        </div>
    </section>
{% endblock content %}
